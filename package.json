{
  "name": "@tuulbelt/port-resolver",
  "version": "0.3.0",
  "description": "Concurrent port allocation for any application - avoid port conflicts in tests, servers, microservices, and development environments",
  "main": "src/index.ts",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./core": "./src/core/index.ts",
    "./api": "./src/api/index.ts",
    "./utils": "./src/utils/index.ts",
    "./registry": "./src/registry/index.ts",
    "./types": "./src/types.ts",
    "./config": "./src/config.ts",
    "./package.json": "./package.json"
  },
  "bin": {
    "portres": "./src/cli.ts",
    "port-resolver": "./src/cli.ts"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --import tsx --test test/index.test.ts test/new-apis.test.ts test/range-apis.test.ts test/edge-cases.test.ts test/utils.test.ts",
    "test:watch": "node --import tsx --test --watch test/index.test.ts test/new-apis.test.ts test/range-apis.test.ts test/edge-cases.test.ts test/utils.test.ts",
    "bench": "node --import tsx benchmarks/index.bench.ts",
    "dogfood": "npm run dogfood:flaky && npm run dogfood:semaphore",
    "dogfood:flaky": "flaky --test 'npm test' --runs 10",
    "dogfood:semaphore": "npx tsx test/dogfood-semaphore.ts"
  },
  "keywords": [
    "tuulbelt",
    "port",
    "port-allocation",
    "concurrent",
    "testing",
    "server",
    "microservices",
    "development",
    "registry"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuulbelt/port-resolver.git"
  },
  "homepage": "https://github.com/tuulbelt/port-resolver#readme",
  "bugs": {
    "url": "https://github.com/tuulbelt/tuulbelt/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tuulbelt/file-based-semaphore-ts": "git+https://github.com/tuulbelt/file-based-semaphore-ts.git"
  },
  "devDependencies": {
    "@tuulbelt/test-flakiness-detector": "git+https://github.com/tuulbelt/test-flakiness-detector.git",
    "@types/node": "^20.19.27",
    "tatami-ng": "^0.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
